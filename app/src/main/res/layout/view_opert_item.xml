<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="4dp">

    <LinearLayout
        android:id="@+id/layout_study_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/imv_opport_item"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/test_image"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            >
            <com.intellidev.app.mashroo3k.CustomTextView
                android:id="@+id/tv_opport_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                tools:text="Factory"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_mp_locator"
                    />
                <com.intellidev.app.mashroo3k.CustomTextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Kingdom of Saudi Arabia"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:textSize="10sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray_blue"
                    />
            </LinearLayout>

        </LinearLayout>
            <com.intellidev.app.mashroo3k.CustomButtonTextFont
                android:id="@+id/btn_order"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_order_button"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/order_now"
                />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>