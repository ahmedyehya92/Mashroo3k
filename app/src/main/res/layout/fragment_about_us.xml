<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.intellidev.app.mashroo3k.ui.aboutus.AboutUsFragment">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <View
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="1dp"
                android:background="@color/white"
                />

            <com.intellidev.app.mashroo3k.uiutilities.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="@string/about_mashroo3k"
                android:gravity="center"
                />
            <View
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="1dp"
                android:background="@color/white"
                />
        </LinearLayout>

        <com.intellidev.app.mashroo3k.uiutilities.CustomTextView
            android:id="@+id/tv_about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_aboutus_boarder"
            android:padding="24dp"
            android:textSize="12sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <View
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="1dp"
                android:background="@color/white"
                />

            <com.intellidev.app.mashroo3k.uiutilities.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="@string/to_contact_us"
                android:gravity="center"
                />
            <View
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="1dp"
                android:background="@color/white"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_gravity="end"
            android:orientation="vertical">
        <LinearLayout
            android:id="@+id/btn_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            >

            <com.intellidev.app.mashroo3k.uiutilities.CustomTextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/white"
                android:text="01155906980"
                />
            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_phone_white_24dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/btn_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            >


            <com.intellidev.app.mashroo3k.uiutilities.CustomTextView
                android:id="@+id/tv_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/white"
                android:text="http://www.mashroo3k.com"
                />
            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_web_icon" />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <include
        layout="@layout/layout_full_screen_loading"
        android:id="@+id/loading_layout"
        android:visibility="gone"
        />
</RelativeLayout>
